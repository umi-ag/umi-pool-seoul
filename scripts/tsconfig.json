{
  "compilerOptions": {
    "lib": [
      "ESNext",
      "DOM",
    ],
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "node",
    "isolatedModules": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "types": [
      "@types/node",
      "vite/client"
    ],
    "noEmit": true,
    "baseUrl": "./",
    "paths": {
      "@": [
        "tests"
      ]
    }
  }
}